#!/usr/bin/env ruby
# should2expect

# 20150122
# 0.5.0

# Changes since 0.4:
# 1. + allow()
# 2. + all_any_instance_of()

# Notes: 
# 1. be_nil() does not satisfy a deprecation, but rather is stylistic
# and makes use of an existing matching which is more apropos.

def transforms(contents)
  eq(contents)
  to(contents)
  not_to(contents)
  be_nil(contents)
  allow(contents)
  allow_any_instance_of(contents)
end

def eq(contents)
  contents.gsub!(/ *==( *)(.+)/, "\\1eq(\\2)")
end

def to(contents)
  contents.gsub!(/( *)(.+)\.should( +)/, "\\1expect(\\2).to\\3")
end

def not_to(contents)
  contents.gsub!(/( *)(.+)\.should_not( +)/, "\\1expect(\\2).not_to\\3")
end

def be_nil(contents)
  contents.gsub!(/eq(nil)/, "be_nil")
end

def allow(contents)
  contents.gsub!(/( *)(.+)\.stub\((.+)\)( +)/, "\\1allow(\\2).to receive(\\3)\\4")
end

def allow_any_instance_of(contents)
  contents.gsub!(/( *)(.+)\.any_instance_of\.stub\((.+)\)( +)/, "\\1allow_any_instance_of(\\2).to receive(\\3)\\4")
end

input_filenames = (
  if !ARGV[0].nil?
    Dir[ARGV[0]]
  else
    Dir['*']
  end
)

input_filenames.reject!{|input_filename| File.directory?(input_filename)}

input_filenames.each do |input_filename|
  contents = File.read(input_filename)
  transforms(contents)
  File.write(input_filename, contents)
end
