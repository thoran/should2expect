#!/usr/bin/env ruby
# should2expect

# 20150121
# 0.2.0

# Changes:
# 1. Can handle should_not as well as should for == and =~.

input_filenames = (
  if !ARGV[0].nil?
    Dir[ARGV[0]]
  else
    Dir['*']
  end
)

input_filenames.reject!{|input_filename| File.directory?(input_filename)}

input_filenames.each do |input_filename|
  contents = File.read(input_filename)
  new_contents = contents.gsub(/( +)(.+)\.should == (.*)$/, "\\1expect(\\2).to eq(\\3)")
  new_contents = new_contents.gsub(/( +)(.+)\.should =~ (.*)$/, "\\1expect(\\2).to match(\\3)")
  new_contents = new_contents.gsub(/( +)(.+)\.should_not == (.*)$/, "\\1expect(\\2).not_to eq(\\3)")
  new_contents = new_contents.gsub(/( +)(.+)\.should_not =~ (.*)$/, "\\1expect(\\2).not_to match(\\3)")
  File.write(input_filename, new_contents)
end
